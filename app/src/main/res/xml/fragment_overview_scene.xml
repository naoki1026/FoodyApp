<?xml version="1.0" encoding="utf-8"?>
<MotionScene
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="1000">
       <KeyFrameSet>
           <KeyAttribute
               motion:motionTarget="@+id/heartImageView"
               motion:framePosition="100"
               android:alpha="0" />
           <KeyAttribute
               motion:motionTarget="@+id/timeImageVIew"
               motion:framePosition="100"
               android:alpha="0" />
           <KeyAttribute
               motion:motionTarget="@+id/likeTextView"
               motion:framePosition="100"
               android:alpha="0" />
           <KeyAttribute
               motion:motionTarget="@+id/timeTextView"
               motion:framePosition="100"
               android:alpha="0" />
           <KeyAttribute />
       </KeyFrameSet>
        <OnSwipe
            motion:touchAnchorId="@+id/mainImageView"
            motion:touchAnchorSide="bottom" />
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:layout_height="100dp"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:id="@+id/gradientOverlay"
            motion:layout_constraintBottom_toBottomOf="@+id/mainImageView"
            motion:layout_constraintTop_toTopOf="@+id/mainImageView"
            motion:layout_constraintVertical_bias="1.0" />
        <Constraint
            android:layout_height="100dp"
            android:layout_width="wrap_content"
            android:id="@+id/gradient_overlay"
            motion:layout_constraintTop_toTopOf="@+id/mainImageView"
            motion:layout_constraintBottom_toBottomOf="@+id/mainImageView"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintVertical_bias="1.0" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/mainImageView"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:layout_height="1dp"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent" />
        <Constraint
            android:id="@+id/mainImageView"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:alpha="0"
            android:layout_height="1dp"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent" />
    </ConstraintSet>
</MotionScene>